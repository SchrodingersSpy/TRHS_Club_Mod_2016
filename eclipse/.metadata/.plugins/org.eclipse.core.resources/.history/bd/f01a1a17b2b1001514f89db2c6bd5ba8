package epidemiccraft.proxy;

import cpw.mods.fml.client.registry.RenderingRegistry;
import cpw.mods.fml.relauncher.Side;
import cpw.mods.fml.relauncher.SideOnly;
import epidemiccraft.mobs.GiardiaCowModel;
import epidemiccraft.mobs.GiardiaCowRender;
import epidemiccraft.mobs.EbolaBatModel;
import epidemiccraft.mobs.EbolaBatRender;
import epidemiccraft.mobs.EntityGiardiaCowMob;
import epidemiccraft.mobs.EntityEbolaBatMob;

public class ClientProxy  extends CommonProxy{

	@SideOnly(Side.CLIENT)
	public void preInit(){
		RenderingRegistry.addNewArmourRendererPrefix("5");
	}
	
	public void init(){
		this.registerRenders();
	}
	
	
	public void registerRenders(){
		RenderingRegistry.registerEntityRenderingHandler(EntityGiardiaCowMob.class, new GiardiaCowRender(new GiardiaCowModel(), 0));
		RenderingRegistry.registerEntityRenderingHandler(EntityBubPlagueMob.class, new BubPlagueRender(new BubPlagueModel(), 0));
		RenderingRegistry.registerEntityRenderingHandler(EntityCholSquidMob.class, new EbolaBatRender(new EbolaBatModel(), 0));
		RenderingRegistry.registerEntityRenderingHandler(EntityCPoxVillagerMob.class, new EbolaBatRender(new EbolaBatModel(), 0));
		RenderingRegistry.registerEntityRenderingHandler(EntityEColiVillagerMob.class, new EbolaBatRender(new EbolaBatModel(), 0));
		RenderingRegistry.registerEntityRenderingHandler(EntityFluVillagerMob.class, new EbolaBatRender(new EbolaBatModel(), 0));
		RenderingRegistry.registerEntityRenderingHandler(EntityPolioVillagerMob.class, new EbolaBatRender(new EbolaBatModel(), 0));
		RenderingRegistry.registerEntityRenderingHandler(EntityRabiesWolfMob.class, new EbolaBatRender(new EbolaBatModel(), 0));

	}
	
}
