package epidemiccraft.m;

import net.minecraft.entity.Entity;
import net.minecraft.entity.EntityList;
import net.minecraft.entity.EnumCreatureType;
import net.minecraft.world.biome.BiomeGenBase;
import cpw.mods.fml.common.registry.EntityRegistry;
import epidemiccraft.c.EpidemicCraft;
import epidemiccraft.lib.Constants;

public class ModEntities {
	
	public static void preInit(){
		EntityRegistry.registerGlobalEntityID(EntityAnthraxCowMob.class, "EntityAnthraxCow", EntityRegistry.findGlobalUniqueEntityId(), 0x3D1F00, 0x660000);
		EntityRegistry.addSpawn(EntityAnthraxCowMob.class, 15, 4, 5, EnumCreatureType.monster, BiomeGenBase.birchForest, BiomeGenBase.birchForestHills, BiomeGenBase.forest, BiomeGenBase.savanna, BiomeGenBase.extremeHillsEdge);
		
		EntityRegistry.registerGlobalEntityID(EntityEbolaBat.class, "EntityEbolaBat", EntityRegistry.findGlobalUniqueEntityId(), 0x180C00 , 0x660000);
		EntityRegistry.addSpawn(EntityEbolaBatMob.class, 15, 4, 5, EnumCreatureType.monster, BiomeGenBase.birchForestHills, BiomeGenBase.forestHills);
	}
	

